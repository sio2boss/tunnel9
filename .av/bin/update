#! /bin/bash


# Import color
source $AV_CONFIG_DIR/default_imports

# Check for a help flag
avCheckHelpFlags "$1" "tunnel9" "Update dependencies" "\n\
Usage:\n\
    update golang dependencies\n\
\n"

# Import system path
avAppendSystemPath

#### Put system commands here

cd $AV_ROOT/.. 
set -e  # Exit on any error

echo "ðŸ”„ Updating Go dependencies..."

# Update all dependencies to latest versions
echo "ðŸ“¦ Running go get -u ./..."
go get -u ./...

# Clean up and optimize dependencies
echo "ðŸ§¹ Running go mod tidy..."
go mod tidy

echo "âœ… Dependencies updated successfully!"
echo ""
echo "Updated dependencies can be found in go.mod"

#### End commands